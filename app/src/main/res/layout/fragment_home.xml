<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    tools:context=".ui.fragments.home.view.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/helloTextAndFloatingActionButtonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/userDisplayNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/cera_pro_bold"
                tools:text="@string/hello_string"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addTransactionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:src="@drawable/ic_add_24"
                android:tint="@color/grey_400" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/expenseAndIncomesInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/helloTextAndFloatingActionButtonLayout">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/expenseInfoLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/expenseAmountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cera_pro_bold"
                            tools:text="@string/sample_expense_number"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cera_pro_bold"
                            android:text="@string/active_expense"
                            android:textColor="@color/grey_400"
                            android:textSize="14sp" />

                        <!--
               <com.google.android.material.card.MaterialCardView
                            android:id="@+id/addExpenseButton"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:background="?attr/selectableItemBackground"
                            android:backgroundTint="#2F75FD"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="12dp">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:contentDescription="@string/add_expense_button"
                                android:src="@drawable/ic_add_24"
                                app:tint="@color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/cera_pro_bold"
                            android:text="@string/add_expense"
                            android:textColor="@color/white">

                        </TextView>
                      -->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/incomesAmountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cera_pro_bold"
                            tools:text="@string/sample_income_number"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cera_pro_bold"
                            android:text="@string/active_incomes"
                            android:textColor="@color/grey_400"
                            android:textSize="14sp" />
                        <!--
                              <com.google.android.material.card.MaterialCardView
                                android:id="@+id/addIncomesButton"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_marginTop="12dp"
                                android:background="?attr/selectableItemBackground"
                                android:backgroundTint="#2F75FD"
                                android:clickable="true"
                                android:focusable="true"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:contentDescription="@string/add_income_button"
                                    android:src="@drawable/ic_add_24"
                                    app:tint="@color/white" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/cera_pro_bold"
                                android:text="@string/add_income"
                                android:textColor="@color/white" />
                        -->

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cera_pro_medium"
                        android:text="Date Range"
                        android:textColor="@color/white">

                    </TextView>

                    <TextView
                        android:id="@+id/dateRangeText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/cera_pro_medium"
                        android:text=" (All time)"
                        android:textColor="@color/white"
                        android:textSize="10sp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dateRangeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/transactionMinDateLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/min_date_calendar"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/selectedMinDateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cera_pro_medium"
                            android:text="@string/min_date"
                            android:textAlignment="center"
                            android:textColor="@color/white">

                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/cera_pro_bold"
                        android:text="@string/brace"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/transactionMaxDateLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/max_date_calendar"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/selectedMaxDateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cera_pro_medium"
                            android:text="@string/max_date"
                            android:textAlignment="center"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/dateRangeCancelButton"
                        app:tint="@color/white"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cancel"
                        ></ImageView>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <app.futured.donut.DonutProgressView
                    android:id="@+id/donut_view"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:donut_animateChanges="true"
                    app:donut_bgLineColor="@color/white"
                    app:donut_gapWidth="0"
                    app:donut_strokeWidth="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="#FB1D32" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/cera_pro_bold"
                        android:text="@string/expenses"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="#FFB98E" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/cera_pro_bold"
                        android:text="@string/incomes"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/recentlyAddedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/cera_pro_bold"
        android:paddingHorizontal="16dp"
        android:text="@string/recently_added"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/example" />

    <LinearLayout
        android:id="@+id/transactionNotFoundLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/transactionsRW"
        app:layout_constraintEnd_toEndOf="@+id/transactionsRW"
        app:layout_constraintStart_toStartOf="@+id/transactionsRW"
        app:layout_constraintTop_toTopOf="@+id/transactionsRW">

        <ImageView
            android:id="@+id/noDataImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_not_found" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/cera_pro_medium"
            android:text="Transaction Not Found"
            android:textColor="@color/grey_600"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transactionsRW"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recentlyAddedText" />

    <ProgressBar
        android:id="@+id/homeInfoProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>